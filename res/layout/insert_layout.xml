<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="1dp" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_marginLeft="2dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="5dip"
            android:text="Enter Cholestral log details:"
            android:textColor="#0b84aa"
            android:textSize="17dip"
            android:typeface="serif"
            tools:context=".AddPizzaActivity" />

        <TableRow
            android:id="@+id/tablerow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/total_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Pizza Name"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/chol_value"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:text="Chicken pizza" />

            <!--
                 <TextView
                android:id="@+id/total_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mg/dl"
                android:textColor="#000000" />
            -->
        </TableRow>

        <TableRow
            android:id="@+id/tablerow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/hdl_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Regular Price"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/hdl_value"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="100" />

            <!--
                 <TextView
                android:id="@+id/total_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mg/dl"
                android:textColor="#000000" />
            -->
        </TableRow>

        <TableRow
            android:id="@+id/tablerow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ldl_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Medium Price"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/ldl_value"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="200" />

            <!--
                 <TextView
                android:id="@+id/total_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mg/dl"
                android:textColor="#000000" />
            -->
        </TableRow>

        <TableRow
            android:id="@+id/tablerow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tri_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Large Price"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/tri_value"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="300" />

            <!--
                 <TextView
                android:id="@+id/total_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mg/dl"
                android:textColor="#000000" />
            -->

        </TableRow>

        <TableRow
            android:id="@+id/tablerow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Type??" />

            <RadioGroup
                android:id="@+id/radiofasting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:text="fasting" >

                <RadioButton
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="veg" />

                <RadioButton
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="nonveg" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:id="@+id/tablerow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TableRow>

        <Button
            android:id="@+id/addpizzaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />
    </TableLayout>

</FrameLayout>